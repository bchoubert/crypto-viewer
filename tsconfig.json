{
  "compilerOptions": {
    "noEmit": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react-native",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.js",
    "./**/*.jsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": ["node", "jest", "@testing-library/jest-dom"]
}
